<Window x:Class="WPF_Biblioteka.Users"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Biblioteka"
        mc:Ignorable="d"
        Title="Users" Height="450" Width="800">

    <StackPanel Margin="63,33,102,138" RenderTransformOrigin="0.611,0.708">

        <TextBox x:Name="ImagePath" />

        <Button x:Name="BrowseButton" Content="Add" FontSize="15" Click="BrowseButton_OnClick" Margin="198,170,287,193" Height="35"/>
        <Button x:Name="SaveButton" Content="Save" Click="SaveButton_OnClick" Margin="201,-742,278,34" Height="44"/>

        <Button x:Name="LoadButton" Content="Load" Click="LoadButton_OnClick" Margin="201,-420,287,193" Height="46" />


        <Image x:Name="MyImage">
            <Image.Source>
                <BitmapImage UriSource="{Binding ElementName=ImagePath, Path=Text}" />
            </Image.Source>
        </Image>







    </StackPanel>








</Window>
